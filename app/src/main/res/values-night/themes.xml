<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartRecipes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/orange_night</item>
        <item name="colorPrimaryVariant">@color/orange_night_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/yellow_night</item>
        <item name="colorPrimaryDark">?attr/backgroundColor</item>
        <item name="colorPrimaryContainer">@color/yellow_night</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
<!--        <item name="android:navigationBarColor">@color/white</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorOnBackground">@color/white</item>
<!--        <item name="android:windowBackground">@color/white</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorSurface">#1A1818</item>
        <item name="backgroundColor">#1A1818</item>
        <item name="android:windowBackground">#1A1818</item>
        <item name="bottomSheetDialogTheme">@style/Theme.NoWiredStrapInNavigationBar</item>
        <item name="bottomSheetBackgroundColor">?attr/backgroundColor</item>
        <item name="bottomSheetColorPrimary">@color/orange_night</item>
        <item name="bottomSheetColorOnPrimary">@color/white</item>
        <item name="bottomSheetColorSecondary">@color/yellow_night</item>
        <item name="appTextColor">@color/white</item>

    </style>
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/orange_night</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.SmartRecipes</item>
    </style>


    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/orange_night</item>
    </style>
</resources>